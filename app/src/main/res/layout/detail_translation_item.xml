<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <TextView
        tools:text="en"
        android:layout_height="wrap_content"
        android:layout_width="15dp"
        style="@style/detailTextLabel"
        android:id="@+id/country_detail_translation_item_language"
        android:textAllCaps="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/detailText"
        android:paddingLeft="@dimen/detail_block_padding"
        android:paddingRight="@dimen/detail_block_padding"
        android:text="@string/dash"/>

    <TextView
        tools:text="some name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/detailText"
        android:id="@+id/country_detail_translation_item_translation"/>

</LinearLayout>
